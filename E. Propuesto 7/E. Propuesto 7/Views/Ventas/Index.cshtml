@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ventas</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">

    <tr>

        <th>
            @Html.DisplayNameFor(model => model.id_venta)
